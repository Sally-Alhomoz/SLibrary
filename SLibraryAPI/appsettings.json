{
  "ConnectionStrings": {
    "connectionString": "Server=.\\SQLEXPRESS;Database=SLibrary;Trusted_Connection=True;TrustServerCertificate=True"

  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console","Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        // Suppress noisy framework logs
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console" 
      },
      {
        "Name": "File", 
        "Args": {
          "path": "logs/Slibrary-log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizedLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext","WithMachineName","WithProcessId","WithThreadId"]
  },
  "AllowedHosts": "*",

  "JWT": {
    "Issuer": "http://localhost:55472",
    "Audince": "http://localhost:8764",
    "SecretKey": "##sally##Slibrary##sally##Slibrary"
  }
}
