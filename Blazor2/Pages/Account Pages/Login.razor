@page "/login"
@using Blazor2.Services
@using Shared
@inject IAccountService AccountService
@inject NavigationManager NavManager

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg p-4">
            <div class="card-body">
                <EditForm Model="@loginModel" FormName="loginForm" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    <div class="mb-3">
                        <label>Username</label>
                        <InputText @bind-Value="loginModel.Username" class="form-control" placeholder="Username"></InputText>
                        <ValidationMessage For="() => loginModel.Username"></ValidationMessage>
                    </div>

                    <div class="mb-3">
                        <label>Password</label>
                        <InputText @bind-Value="loginModel.password" type="password" class="form-control" placeholder="Password"></InputText>
                        <ValidationMessage For="() => loginModel.password"></ValidationMessage>
                    </div>
                    <div class="mb-3 d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </EditForm>
            </div>
            <div class="card-footer text-center">
                <p class="mb-0 text-muted">Need to create an account? <a href="/Account/Register">Register</a></p>
            </div>
        </div>
    </div>
</div>

@code {
    private dtoLogin loginModel = new dtoLogin();
    private string? errorMessage;

    private async Task HandleLogin()
    {
        errorMessage = null;
        var success = await AccountService.Login(loginModel.Username,loginModel.password);
        if (success)
        {
            NavManager.NavigateTo("/");
        }
        else
        {
            errorMessage = "Invalid username or password.";
        }
    }
}
