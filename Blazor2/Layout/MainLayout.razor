@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Blazor2.Services
@inject IAccountService AccountService
@inject NavigationManager Nav

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-end align-items-center">
            <AuthorizeView>
                <Authorized>
                    <span class="me-3">Welcome, <strong>@context.User.Identity?.Name</strong></span>
                    <button class="btn btn-link text-danger" @onclick="Logout">Logout</button>
                </Authorized>
                <NotAuthorized>
                    <a href="/login" class="btn btn-outline-primary">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout()
    {
        await AccountService.Logout();
        Nav.NavigateTo("/login", forceLoad: true);
    }
}