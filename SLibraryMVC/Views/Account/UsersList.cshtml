@model List<Shared.Userdto>

<div class="text">
    <h1 class="display-4">Users</h1>

    <p>
        <a asp-action="CreateUser" class="btn btn-primary">Add New User</a>
    </p>

    <table class="table" id="UsersTable">
        <thead class="text-center">
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        @if (User.Identity.Name != user.Username)
                        {
                            <form asp-action="Delete" method ="post">

                                <input type="hidden" name="username" value="@user.Username" />

                                <button type="button" class="btn btn-link text-danger p-0 action-button" title="Delete" 
                                data-action-type="delete" data-username="@user.Username">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
</table>
    <div class="modal fade" id="confirmation" tabindex="-1" aria-labelledby="confirmationLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmationLabel">Confirmation</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="modalMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmActionButton">Confirm</button>
                </div>
            </div>
        </div>
    </div>

@section Scripts{
@*         <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> *@

        <script>
        $(document).ready(function () {
            $('#UsersTable').DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 3 }
                ]
            })
        });

            var formToSubmit = null;

            $('.action-button').on('click', function () {
                formToSubmit = $(this).closest('form');

                var actionType = $(this).data('action-type');
                var username = $(this).data('username');
                var msg = `Are you sure you want to delete user: <strong>${username}</strong>?`;
                $('#confirmActionButton').text('Delete');


                $('#modalMessage').html(msg);

                var myModal = new bootstrap.Modal(document.getElementById('confirmation'));
                myModal.show();

                $('#confirmActionButton').on('click', function () {
                    if (formToSubmit) {
                        formToSubmit.submit();
                    }
                });
            });

       </script>
}
