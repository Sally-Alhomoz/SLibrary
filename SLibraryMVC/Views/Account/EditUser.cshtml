@model Shared.EditAccountdto

@{
    ViewData["Title"] = "Edit User";
}


<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">Edit User Information</h4>
             
                <form asp-action="EditUser" method="post">

                    <div class="mb-3">
                        <label asp-for="newEmail" class="form-label">Edit Email</label>
                        <input asp-for="newEmail" type="email" class="form-control" placeholder="Enter new email"/>
                        <span asp-validation-for="newEmail" class="text-danger"></span>
                    </div>

                    <button type="button" class="btn btn-primary w-100 action-button"
                    data-action-type="edituser">Update</button>
                </form>

            </div>
        </div>
    </div>
    <div class="modal fade" id="confirmation" tabindex="-1" aria-labelledby="confirmationLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="confirmationLabel">Confirmation</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="modalMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmActionButton">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        var formToSubmit = null;

        $('.action-button').on('click', function () {
            formToSubmit = $(this).closest('form');

            var actionType = $(this).data('action-type');
            var msg = `Are you sure you want to change email ?`;

            $('#modalMessage').html(msg);

            var myModal = new bootstrap.Modal(document.getElementById('confirmation'));
            myModal.show();

            $('#confirmActionButton').on('click', function () {
                if (formToSubmit) {
                    formToSubmit.submit();
                }
            });
        });
    </script>
}
   