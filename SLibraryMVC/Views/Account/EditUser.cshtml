@model Shared.EditAccountdto.EditEmail

@{
    ViewData["Title"] = "Edit User";
}


<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">Edit User Information</h4>
             
                <form asp-action="EditUser" method="post">

                    <div class="mb-3">
                        <label asp-for="newEmail" class="form-label">Edit Email</label>
                        <input asp-for="newEmail" type="email" class="form-control" placeholder="Enter new email" required />
                        <span asp-validation-for="newEmail" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
   