@model Shared.EditAccountdto

@{
    ViewData["Title"] = "My Account";
}

<h2 class="text-center mb-4">My Account Settings</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="card mb-4 shadow-sm">
            <div class="card-body"
                <h4 class="card-title mb-3 text-center text-primary">Account Information</h4>

                 <hr />

                 <div class="mb-2">
                    <strong>Username:</strong>
                    <p class="form-control-plaintext border p-2 rounded bg-light">@Model.Username</p>
                </div>

                  <div class="mb-3 d-flex align-items-center justify-content-between">
                    <div>
                        <strong>Email:</strong>
                        <p class="form-control-plaintext border p-2 rounded bg-light mb-0">
                            @Model.Email
                        </p>
                    </div>
                    <a asp-action="EditUser" class="btn btn-outline-secondary btn-sm ms-2" title="Edit User">
                        <i class="bi bi-pencil"></i>
                    </a>
                </div>

                 <div class="text-center mt-4">
                   <a asp-action="ResetPassword" class="btn btn-primary w-100">
                        <i class="bi bi-key"></i> Reset Password
                    </a>
                </div>
        </div> 
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}