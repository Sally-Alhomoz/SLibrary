@model Shared.EditAccountdto

@{
    ViewData["Title"] = "My Account";
}

<h2 class="text-center mb-4">My Account Settings</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="card mb-4 shadow-sm">
            <div class="card-body"
                <h4 class="card-title mb-3 text-center text-primary">Account Information</h4>
                <a asp-action="EditUser" class="btn btn-outline-secondary btn-sm ms-2" title="Edit User">
                        <i class="bi bi-pencil"></i>
                    </a>

                 <hr />

                <div class="mb-2">
                    <strong>Username:</strong>
                    <p class="form-control-plaintext border p-2 rounded bg-light">@Model.Username</p>
                </div>

                <div>
                     <strong>Email:</strong>
                     <p class="form-control-plaintext border p-2 rounded bg-light mb-0">@Model.Email</p>
                </div>


                <div class="text-center mt-4">
                   <a asp-action="ResetPassword" class="btn btn-primary w-100 action-button"
                   data-action-type="changePassword" data-username="@Model.Username">
                        <i class="bi bi-key"></i> Change Password</a>
                </div>
        </div> 
    </div>
        <div class="modal fade" id="confirmation" tabindex="-1" aria-labelledby="confirmationLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="confirmationLabel">Confirmation</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="modalMessage"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" id="confirmActionButton">Confirm</button>
                    </div>
                </div>
            </div>
        </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

        <script>
            var formToSubmit = null;

            $('.action-button').on('click', function () {
                formToSubmit = $(this).closest('form');

                var actionType = $(this).data('action-type');
                var username = $(this).data('username');
                var msg = `Are you sure you want to delete the book: <strong>${username}</strong>?`;


                $('#modalMessage').html(msg);

                var myModal = new bootstrap.Modal(document.getElementById('confirmation'));
                myModal.show();

            });

            $('#confirmActionButton').on('click', function () {
                if (formToSubmit) {
                    formToSubmit.submit();
                }
            });
        </script>
}