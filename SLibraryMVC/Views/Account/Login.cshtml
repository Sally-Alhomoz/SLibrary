
@{
    ViewData["Title"] = "User Login";
}

@model Shared.dtoLogin


<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg p-4">
            <div class="card-body">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
                    </div>
                }

                <form asp-action="Login" method="post">

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label visually-hidden">Username</label>
                        <input asp-for="Username" placeholder="Enter Username" class="form-control" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="password" class="form-label visually-hidden">Password</label>
                        <input asp-for="password" type="password" placeholder="Enter Password" class="form-control" required />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            Sign In
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer text-center bg-white border-0 mt-3">
                <p class="mb-0 text-muted">Don't have an account?</p>
                <a asp-action="Register" class="text-decoration-none">Create a new account</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}