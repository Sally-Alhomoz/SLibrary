@{
    ViewData["Title"] = "Register";
}


@model Shared.dtoNewUser

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg p-4">
            <div class="card-body">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
                    </div>
                }


                <form asp-action="Register" method="post">

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label visually-hidden">Username</label>
                        <input asp-for="Username" placeholder="Choose a Username" class="form-control" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                        <div class="mb-3">
                        <label asp-for="Email" class="form-label visually-hidden">Email</label>
                        <input asp-for="Email" type="email" placeholder="Enter Your Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label visually-hidden">Password</label>
                        <input asp-for="Password"
                               type="password" placeholder="Create a Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            Register
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer text-center bg-white border-0 mt-3">
                <p class="mb-0 text-muted">Already have an account?</p>
                <a asp-action="Login" class="text-decoration-none">Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}