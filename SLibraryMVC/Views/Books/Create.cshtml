@{
    ViewData["Title"] = "Add Book";
}

@model Shared.Bookdto

<div class="text-center">
    <h1 class="display-4">Add new Book</h1>
</div>

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter title" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Author" class="form-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Enter author" required />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>