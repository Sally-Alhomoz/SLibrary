@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using SLibrary.Blazor.Services.Authentication_Services
@using SLibrary.Blazor.Services.Account_Services
@inject IAccountService AccountService
@inject CustomAuthStateProvider AuthProvider
@inject NavigationManager Nav

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row px-4 d-flex justify-content-end align-items-center">
                    <span class="me-3">Welcome, <strong>@context.User.Identity?.Name</strong></span>
                    <button class="btn btn-link text-danger" @onclick="Logout">Logout</button>
                </div>

                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        @{
            Nav.NavigateTo("/login", forceLoad: true);
        }
    </NotAuthorized>
</AuthorizeView>

@code {

    private async Task Logout()
    {
        await AccountService.Logout();
        Nav.NavigateTo("/login", forceLoad: true);
    }
}